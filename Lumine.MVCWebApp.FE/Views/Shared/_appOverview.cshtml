@* Views/Shared/_AppOverview.cshtml *@
@model Application.DTOs.AppOverviewDTO

<div class="tng">
    <div class="t">
        <div class="overlap-group">
            <div class="rectangle"></div>
            <div class="text-wrapper">@(Model.TotalUsers * 100 / (Model.TotalUsers + 1))%</div>
            <div class="div">@Model.TotalUsers / ng</div>
            <div class="text-wrapper-2">Tổng người dùng</div>
        </div>
    </div>

    <div class="overlap-wrapper">
        <div class="overlap">
            <div class="rectangle"></div>
            <div class="text-wrapper-3">Tổng đối tác</div>
            <div class="text-wrapper">@(Model.TotalPartners * 100 / (Model.TotalPartners + 1))%</div>
            <div class="text-wrapper-4">@Model.TotalPartners / ng</div>
        </div>
    </div>

    <div class="overlap-group-wrapper">
        <div class="overlap">
            <div class="rectangle"></div>
            <p class="p">Tổng số đơn thành công</p>
            <div class="text-wrapper">50%</div>
            <p class="element-n-th-ng">
                <span class="span">@Model.TotalCompletedBookings</span>
                <span class="text-wrapper-5">đơn / tháng</span>
            </p>
        </div>
    </div>

    <div class="div-wrapper">
        <div class="overlap">
            <div class="rectangle"></div>
            <div class="text-wrapper-3">Tổng doanh thu web</div>
            <div class="text-wrapper">76%</div>
            <p class="element-n-th-ng">
                <span class="span">@Model.TotalRevenue.ToString("N0")</span>
                <span class="text-wrapper-5">VNĐ</span>
            </p>
        </div>
    </div>
</div>

