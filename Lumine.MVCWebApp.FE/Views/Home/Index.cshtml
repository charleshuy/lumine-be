@{
    ViewData["Title"] = "Trang Chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@await Html.PartialAsync("_UserSidebar")

<!-- Hero Section -->
<section class="hero text-white text-center py-5 position-relative"
         style="background: url('/img/hero-makeup.png') no-repeat center/cover;">
    <div class="overlay position-absolute top-0 start-0 w-100 h-100" style="background: linear-gradient(135deg, #fddde6, #fbc1d3); opacity: 0.8; z-index: 1;"></div>

    <div class="container text-center position-relative z-2">
        <img src="~/img/group-97.png" alt="Lumine Hero" class="img-fluid hero-image" />
    </div>
</section>



<!-- Features Section -->
<section class="features py-5 bg-white text-center">
    <div class="container">
        <div class="row g-5">
            <div class="col-md-4">
                <a asp-controller="Auth" asp-action="RegistOption" class="text-decoration-none text-dark">
                    <div class="feature-card p-4 border rounded-4 shadow-sm h-100 hover-feature">
                        <img src="~/img/client-icon.png" alt="Client" class="mb-3 feature-icon" />
                        <h5 class="fw-bold">Khách Hàng</h5>
                        <p class="text-muted">Tìm kiếm thợ makeup uy tín</p>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a asp-controller="Auth" asp-action="RegistOption" class="text-decoration-none text-dark">
                    <div class="feature-card p-4 border rounded-4 shadow-sm h-100 hover-feature">
                        <img src="~/img/lumine-icon.png" alt="Lumine" class="mb-3 feature-icon" />
                        <h5 class="fw-bold">Lumine</h5>
                        <p class="text-muted">Hỗ trợ hai bên cùng lợi ích</p>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a asp-controller="Auth" asp-action="RegistOption" class="text-decoration-none text-dark">
                    <div class="feature-card p-4 border rounded-4 shadow-sm h-100 hover-feature">
                        <img src="~/img/artist-icon.png" alt="Artist" class="mb-3 feature-icon" />
                        <h5 class="fw-bold">Đối Tác</h5>
                        <p class="text-muted">Tìm khách hàng để makeup</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Membership Benefits Section -->
<section class="membership-benefits position-relative text-dark py-5"
         style="background: url('/img/member-benefits-bg.png') no-repeat center/cover; min-height: 600px;">
    <div class="container position-relative z-2">
        <div class="benefit-box bg-white bg-opacity-75 p-5 rounded-4 shadow"
             style="max-width: 650px; margin: 0 auto; backdrop-filter: blur(5px);">
            <h2 class="fw-bold text-center mb-4" style="font-family: 'Playfair Display', serif; font-size: 2rem;">
                Bạn sẽ được gì khi<br />đăng ký thành viên
            </h2>
            <ul class="list-unstyled fs-5">
                <li class="mb-4">
                    <div class="d-flex align-items-start mb-2">
                        <span class="me-2 mt-1" style="font-size: 1.5rem; color: black;">●</span>
                        <strong>Đối với thợ makeup</strong>
                    </div>
                    <ul class="ps-4 text-muted">
                        <li class="mb-1">+ Hỗ trợ thợ makeup tìm khách hàng nhanh chóng</li>
                        <li>+ Tiện ích khi tích hợp những sản phẩm cho việc trang điểm</li>
                    </ul>
                </li>
                <li>
                    <div class="d-flex align-items-start mb-2">
                        <span class="me-2 mt-1" style="font-size: 1.5rem; color: black;">●</span>
                        <strong>Đối với khách hàng</strong>
                    </div>
                    <ul class="ps-4 text-muted">
                        <li class="mb-1">+ Hỗ trợ khách hàng tìm thợ makeup uy tín, chất lượng giá cả phải chăng</li>
                        <li>+ Tiện ích khi tích hợp những sản phẩm cho việc trang điểm</li>
                    </ul>
                </li>
            </ul>

            <!-- Registration Button -->
            <a asp-controller="Auth" asp-action="RegistOption" class="btn btn-black mt-4 d-block mx-auto" style="width: fit-content;">
                ĐĂNG KÝ NGAY →
            </a>
        </div>
    </div>
</section>



<!-- Customer Promo Section -->
<section class="promo-customer position-relative text-white d-flex align-items-center"
         style="background: url('/img/customer-banner.png') no-repeat center/cover; min-height: 500px;">
    <div class="container">
        <div class="text-end">
            <div class="d-inline-block mb-2 px-4 py-1 bg-white text-dark rounded-pill fw-semibold"
                 style="font-size: 1.1rem;">
                Đối với
            </div>
            <h2 class="text-white fw-bold mb-3" style="font-size: 3rem; font-family: 'Pacifico', cursive;">
                Khách hàng
            </h2>
            <p class="text-white" style="max-width: 500px; float: right;">
                Các thợ makeup có thể dễ dàng quản lý mục, đề xuất dịch vụ phù hợp với mình.
                Xem đánh giá chất lượng của khách hàng.
            </p>
        </div>
    </div>
</section>


<!-- Artist Promo Section -->
<section class="promo-artist position-relative text-white d-flex align-items-center"
         style="background: url('/img/artist-banner.png') no-repeat center/cover; min-height: 500px;">
    <div class="container">
        <div class="text-start">
            <div class="d-inline-block mb-2 px-4 py-1 bg-white text-dark rounded-pill fw-semibold"
                 style="font-size: 1.1rem;">
                Đối với
            </div>
            <h2 class="text-white fw-bold mb-3" style="font-size: 3rem; font-family: 'Pacifico', cursive;">
                Thợ makeup
            </h2>
            <p class="text-white" style="max-width: 500px;">
                Các thợ makeup có thể dễ dàng quản lý mục, đề xuất dịch vụ phù hợp với mình.
                Xem đánh giá chất lượng dịch vụ từ khách hàng.
            </p>
        </div>
    </div>
</section>

