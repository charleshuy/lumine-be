@using Microsoft.AspNetCore.Mvc.ModelBinding
@model Application.DTOs.Auth.RegisterEmailRequest

@{
    ViewData["Title"] = "Đăng ký Nghệ sĩ";
}

<div class="register-page">
    <div class="logo-top-center">
        <img src="~/img/logo01.png" alt="Logo" />
    </div>

    <div class="quay-li">
        <a asp-action="LoginUser" class="QUAY-l-i">&lt; QUAY LẠI</a>
    </div>

    <form asp-action="RegisterArtist" method="post" class="register-form" novalidate>
        <button type="button" class="google-btn">
            <img src="~/img/google-icon.png" alt="Google icon" />
            <span>Đăng ký bằng Google</span>
        </button>

        <div class="form-group icon-input">
            <i class="fa-solid fa-user"></i>
            <input asp-for="FullName" placeholder="Nhập họ & tên" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-group icon-input">
            <i class="fa-solid fa-location-dot"></i>
            <input asp-for="Address" placeholder="Nhập địa chỉ" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group icon-input">
            <i class="fa-solid fa-phone"></i>
            <input asp-for="PhoneNumber" placeholder="Nhập số điện thoại" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group icon-input">
            <i class="fa-solid fa-envelope"></i>
            <input asp-for="Email" placeholder="Nhập Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group icon-input">
            <i class="fa-solid fa-lock"></i>
            <input asp-for="Password" id="artistPasswordInput" type="password" placeholder="Nhập mật khẩu" />
            <span class="password-toggle" onclick="togglePassword()">
                <i id="toggleIcon" class="fa-solid fa-eye"></i>
            </span>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group icon-input">
            <i class="fa-solid fa-lock"></i>
            <input type="password" placeholder="Nhập mật khẩu lần 2" />
            @* You can add JS to confirm password match *@
        </div>

        <div class="form-check">
            <input type="checkbox" id="agreeTerms" required />
            <label for="agreeTerms">
                Tôi đồng ý với Điều khoản dịch vụ và Chính sách bảo mật của Lumine dành cho nghệ sĩ.
            </label>
        </div>

        <button type="submit" class="submit-btn">Tạo tài khoản nghệ sĩ</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword() {
            const input = document.getElementById("artistPasswordInput");
            const icon = document.getElementById("toggleIcon");
            const isPassword = input.type === "password";
            input.type = isPassword ? "text" : "password";
            icon.classList.toggle("fa-eye");
            icon.classList.toggle("fa-eye-slash");
        }
    </script>
}
